{
  "compilerOptions": {
    "declaration": true,
    "noResolve": false,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2017"],
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "jsx": "react"
  },
  "files": ["./src/index.ts"]
}
